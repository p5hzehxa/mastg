{
    // Per-directory configuration for tests-beta/
    // Extends the root configuration and adds a rule to prevent MASTG-TOOL references
    // NOTE: search-replace rules must be fully repeated here as arrays don't merge with "extends"
    "extends": "../.markdownlint.jsonc",
    "search-replace": {
      "rules": [
        {
          "name": "curly-double-quotes",
          "message": "Do not use curly double quotes.",
          "searchPattern": "/“|”/g",
          "replace": "\"",
          "searchScope": "text"
        },
        {
          "name": "nbsp",
          "message": "Don't use no-break spaces",
          "searchPattern": "/ /g",
          "replace": " ",
          "searchScope": "all"
        },
        {
          "name": "curly-single-quotes",
          "message": "Don't use curly single quotes",
          "searchPattern": "/‘|’/g",
          "replace": "'",
          "searchScope": "text"
        },
        {
          "name": "gender-neutrality",
          "message": "Ensure gender-neutral language is used.",
          "searchPattern": "/\\bhe\\b|\\bshe\\b|\\bhis\\b|\\bhimself\\b|\\bherself\\b|\\bher\\b|\\bhim\\b|\\bhers\\b/g",
          "replace": ""
        },
        {
          "name": "trailing-spaces",
          "message": "Avoid trailing spaces",
          "searchPattern": "/  +$/gm",
          "replace": "",
          "searchScope": "all"
        },
        {
          "name": "double-spaces",
          "message": "Avoid double spaces",
          "searchPattern": "/([^\\s>])  ([^\\s|])/g",
          "replace": "$1 $2",
          "searchScope": "text"
        },
        {
          "name": "no-tool-references-in-tests",
          "message": "MASTG-TOOLs should not be referenced directly in tests. Use @MASTG-TECH-xxxx instead.",
          "searchPattern": "/@MASTG-TOOL-\\d{4}/g",
          "searchScope": "text"
        }
      ]
    }
  }
